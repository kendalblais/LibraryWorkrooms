<h2>Books</h2>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("SearchBook", "Books"))
        {
            <h2>Search Book</h2>
            <input type="text" name="SearchBox"><br>
            <button type="submit" class="btn btn-default">Find Book</button><br>
        }
    </div>
    <div class="col-md-4">
        @using (Html.BeginForm("ViewBooks", "Books"))
        {
            <h2>View Taken-Out Books</h2>
            <button type="submit" class="btn btn-default">View Taken Books</button><br>
        }
    </div>
    @if (LibraryWorkroomSystem.Models.Database.Sessions.getType() == "admin")
    {
    <div class="col-md-4">
        @using (Html.BeginForm("AddBook", "Books"))
        {
            <h2>Add Book</h2>
            <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
            <button type="submit" class="btn btn-default">Add</button><br>
        }
    </div>
    }
</div>