<h2>Programs</h2>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("ViewAllPrograms", "Programs"))
        {
            <h2>View All Programs</h2>
            <p>View a list of all the programs currently offered at the library.</p>
            <button type="submit" class="btn btn-default">Show List</button><br>
        }
    </div>
    <div class="col-md-4">
        @using (Html.BeginForm("ViewRegisteredPrograms", "Programs"))
        {
            <h2>Your Programs</h2>
            <p>See all the programs you are signed up for. </p>
            <button type="submit" class="btn btn-default">View</button><br>
        }
    </div>
    @if (LibraryWorkroomSystem.Models.Database.Sessions.getType() == "admin")
    {
        <div class="col-md-4">
            @using (Html.BeginForm("AddProgram", "Programs"))
            {
                <h2>Add Program</h2>
                <p>Create a new program and assign an employee to teach it.</p>
                <button type="submit" class="btn btn-default">Add</button><br>
            }
        </div>
    }
</div>